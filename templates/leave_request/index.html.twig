{% extends 'base.html.twig' %}

{% block title %}{{ 'leave_request.list'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'leave_request.list'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
		<th>{{ 'leave_request.user'|trans }}</th>
                <th>{{ 'leave_request.reason'|trans }}</th>
                <th>{{ 'leave_request.date_from'|trans }}</th>
                <th>{{ 'leave_request.date_to'|trans }}</th>
                <th>{{ 'leave_request.approved'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>	
        {% for leave_request in leave_requests %}
            <tr>
                <td>{{ leave_request.id }}</td>
		<td>{{ leave_request.user }}</td>
                <td>{{ leave_request.reason }}</td>
                <td>{{ leave_request.dateFrom ? leave_request.dateFrom|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ leave_request.dateTo ? leave_request.dateTo|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ leave_request.isApproved ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('leave_request_show', {'id': leave_request.id}) }}">{{'button.show'|trans }}</a>
                    <a href="{{ path('leave_request_edit', {'id': leave_request.id}) }}">{{'button.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no_records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('leave_request_new') }}">{{ 'button.new'|trans }}</a>
{% endblock %}
