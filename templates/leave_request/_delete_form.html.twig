<form method="post" action="{{ path('leave_request_delete', {'id': leave_request.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ leave_request.id) }}">
    <button class="btn btn-primary">{{ 'button.delete'|trans }}</button>
</form>
